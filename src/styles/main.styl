    font-size 30px
    color colorLightGold
    text-transform uppercase
    padding 21px 15px 22px
    border 0
    width 100%
    text-align left

img
  display block
  margin auto

ul
  margin 0
  padding 0

.right
  right 0

.left
  left 0

.show
  display block!important

header
footer
