//outline fix
input
textarea
  outline none
  box-shadow none !important
  resize none

a
button
.btn
.btn-link
  display inline-block
  &:focus
    outline none
    box-shadow none

//bootstrap macOs fix
.row
  &:before
  &:after
    display inline-block !important
    content normal

//styles
