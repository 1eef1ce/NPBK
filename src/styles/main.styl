/** Hamburger icon **/
.menu-toggler
  padding 0
  font-size 1rem
  border 0
  background-color transparent
  .icon-bar
    display block
    width 23px
    height 4px
    background colorBlack
    position relative
    -webkit-transform rotate(0)
    transform rotate(0)
    transform-origin left center
    transition all 0.25s
    &+.icon-bar
      margin-top 6px
  &.active
    .icon-bar
      &:nth-of-type(1)
        -webkit-transform rotate(45deg)
        transform rotate(45deg)
        top 3px
      &:nth-of-type(2)
        opacity 0
      &:nth-of-type(3)
        -webkit-transform rotate(-45deg)
        transform rotate(-45deg)
        top 0

